@{
    ViewBag.Title = "Freshbooks Invoice";
}

<script id="freshbooksTemplate" type="text/html">
     <div id="form-freshbooks" class="freshbooks">
        <div class="form-group">
            <label class="control-label">Amount <span class="required">*</span></label>
            <input class="form-control number" name="Subtotal" required placeholder="Amount (in USD) to pay" />
        </div>
        <div class="form-group">
            <label class="control-label">Last Name <span class="required">*</span></label>
            <input class="form-control" type="text" name="LastName" required placeholder="Last name shown on invoice" />
        </div>
    
        <div class="form-group">
            <label class="control-label">Invoice Number <span class="required">*</span></label>
            <input class="form-control number" type="text" name="InvoiceNumber" required placeholder="Invoice number to be paid" />
            <a href="#" class="invoice-help"><small>Where do I find my invoice number?</small></a>
        </div>

        <div class="form-group">
            <button id="freshbooks-continue" type="submit" class="btn btn-primary">Continue &raquo;</button> <a href="#" class="pull-right freshbooks-toggle">Send non-invoice payment</a>
        </div>
    </div>
</script>

<script id="invoiceHelpTemplate" type="text/html">
    <img class="full" src="@Url.Content("~/Content/img/freshbooks-invoice-help.png")" alt="Freshbooks help" />
</script>