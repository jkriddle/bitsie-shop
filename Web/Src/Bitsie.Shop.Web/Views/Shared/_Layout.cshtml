@using System.Web.Optimization
@using Bitsie.Shop.Domain
@model Bitsie.Shop.Web.Models.BaseViewModel

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="/favicon.ico">
    <meta name="description" content="">
    <meta name="author" content="">
      
    @Styles.Render("~/Bundles/Styles/core")
    @Styles.Render("~/Bundles/Styles/plugins")
    @Styles.Render("~/Bundles/Styles/app")
    @Styles.Render("~/Bundles/Styles/public")
      
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
      <link href='//fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>

    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->


      

  </head>

  <body>


    <div class="navbar navbar-static-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          
            <a class="brand pull-left" href="/"><img src="~/Content/img/bitsie-shop-brand_reversed.png"/></a>
          <div class="nav-collapse pull-right">
              <ul class="nav">
                  <!--<li class="pull-left">
                      <a href="/page/view/pricing">Pricing</a>
                  </li>-->
                  <li class="pull-left">
                      <a href="/page/view/faq">FAQ</a>
                  </li>
                  <li class="pull-left">
                      <a href="/tipsie">Tipsie</a>
                  </li>
                   @if (User.Identity.IsAuthenticated &&
                       (ViewBag.ShowManageLinks == null || ViewBag.ShowManageLinks == true))
                   {
                      if (User.IsInRole(Role.Tipsie.GetDescription()))
                      {
                           <li class="pull-left">
                               <a href="/Tipsie/Dashboard" id="admin">Manage</a>
                           </li>
                      } else {
                           <li class="pull-left">
                               <a href="/Manage/Dashboard" id="admin">Manage</a>
                           </li>
                      }
                       <li class="pull-left">
                           @Html.ActionLink("Sign Out", "SignOut", "User", null, new { @id="signout" })
                       </li>
                   } else
                   {
                      <li class="pull-left @NavHelper.ActiveClass(@Url.Action("SignUp", "User"))">
                          @Html.ActionLink("Sign Up", "Start", "User", null, null)
                      </li>
                      <li class="pull-left @NavHelper.ActiveClass(@Url.Action("SignIn", "User"))">
                            @Html.ActionLink("Sign In", "SignIn", "User", null, null)
                      </li>
                   }
              </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

      @RenderBody()


    
          <footer id="footer" class="site-footer footer ">
          <div class="container">
              <div id="sidebar-footer-1">
                  <div class="row footer-row">
                      <aside class="widget col-xs-4">
                          <h5 class="widget-title">About Us</h5>
                          <p>It is our mission to help organizations understand and leverage Bitcoin to foster commerce, increase profits, and reach new markets.</p>
                      </aside>      
                      <aside class="col-xs-4">
                          <h5 class="widget-title">Contact</h5>
                          <div class="textwidget">
                              <div>Email: <a href="mailto:&#099;&#111;&#110;&#116;&#097;&#099;&#116;&#064;&#098;&#105;&#116;&#115;&#105;&#101;&#046;&#099;&#111;&#109;">&#099;&#111;&#110;&#116;&#097;&#099;&#116;&#064;&#098;&#105;&#116;&#115;&#105;&#101;&#046;&#099;&#111;&#109;</a></div>
                              <div>Phone: <span class="tel">443.598.BITS</span></div>
                          </div>
                      </aside>
                      <aside class="col-xs-4 social-links">
                          <h5 class="widget-title">Get In Touch</h5>
                          <li><a href="https://www.facebook.com/bitsiecom"><i class="fa fa-facebook"></i></a></li>
                          <li><a href="https://www.twitter.com/bitsiecom"><i class="fa fa-twitter"></i></a></li>
                      </aside>
                  </div>
              </div>
              <div class="copyright">
                  <p>© 2014 Bitsie, LLC</p>
              </div>
          </div>
      </footer>  
      
    @Scripts.Render("~/Bundles/Scripts/core")
    @Scripts.Render("~/Bundles/Scripts/plugins")
    @Scripts.Render("~/Bundles/Scripts/app")
    @Scripts.Render("~/Bundles/Scripts/public")
      
    @RenderSection("scripts", required: false)

  </body>
</html>
